pipeline {
    agent any
   
   
    stages {
        stage('Dev') {
            steps {
                echo 'Dev Environment'
                sh 'echo "The person name is.........${name}"'
            }
        }
        stage('Test') {
            environment{
                city= "bangalore"
            }
            steps {
                
                echo 'Test Environment'
                sh 'echo "${name}"'
                sh 'echo "${city}"'
            }
        }
          
    post { 
            always { 
            echo 'I will always say Hello again!'
        }
        failure { 
            echo 'I will always say Hello again when it is falure!'
        }
        }
}
}
